<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:weightSum="7"
    android:background="@drawable/radient_background">

        <TextView
            android:id="@+id/hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"/>
       <TextView
            android:id="@+id/hospital_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alifent_road_dhaka"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/hospital_name"/>


    <ImageButton
        android:id="@+id/phone_in_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/phone"
        android:contentDescription="@string/phone_icon_for_hospitlal"
        android:padding="10dp"
        android:layout_margin="10dp"/>

</RelativeLayout>