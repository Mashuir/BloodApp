<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.bloodapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@drawable/findblood"
        android:label="@string/app_name"
        android:roundIcon="@drawable/findblood"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".FindBloodInApp"
            android:screenOrientation="portrait"/>
        <activity android:name=".FindBloodInHospital"
            android:screenOrientation="portrait"/>
        <activity android:name=".BenefitForAdonor"
            android:screenOrientation="portrait"/>
        <activity android:name=".BeAdonor"
            android:screenOrientation="portrait"/>
        <activity android:name=".SendSms"
            android:screenOrientation="portrait"/>
        <activity android:name=".SendFeedback"
            android:screenOrientation="portrait"/>
        <activity android:name=".findBloodGroup"
            android:screenOrientation="portrait"/>
        <activity android:name=".AboutTheApp"
            android:screenOrientation="portrait"></>
    </application>

</manifest>